{
  "name": "texas-holdem",
  "version": "1.0.0",
  "description": "Texas Hold'em Poker - 1 vs 7 AI opponents",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package": "electron-builder",
    "package:mac": "electron-builder --mac",
    "package:win": "electron-builder --win",
    "package:linux": "electron-builder --linux"
  },
  "keywords": [
    "poker",
    "texas-holdem",
    "game",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.customgames.holdem",
    "productName": "Texas Hold'em",
    "directories": {
      "output": "dist"
    },
    "files": [
      "index.html",
      "styles.css",
      "cards.js",
      "poker-hand.js",
      "ai.js",
      "game.js",
      "main.js",
      "assets/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.ico",
      "sign": null,
      "signingHashAlgorithms": []
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.games"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png",
      "category": "Game"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
