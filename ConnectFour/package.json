{
  "name": "connect-four",
  "version": "1.0.0",
  "description": "Classic Connect Four game with AI opponent",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package": "electron-builder",
    "package:mac": "electron-builder --mac",
    "package:win": "electron-builder --win",
    "package:linux": "electron-builder --linux"
  },
  "keywords": [
    "connect-four",
    "game",
    "ai"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.customgames.connectfour",
    "productName": "Connect Four",
    "directories": {
      "output": "dist"
    },
    "files": [
      "index.html",
      "styles.css",
      "game.js",
      "ai.js",
      "main.js"
    ],
    "mac": {
      "category": "public.app-category.games",
      "icon": "assets/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Game"
    }
  }
}
